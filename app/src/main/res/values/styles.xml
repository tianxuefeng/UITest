<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="STYLE_PERCENT_TV">
        <item name="android:height">0dp</item>
        <item name="android:width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Logo">
        <item name="android:layout_width">@dimen/logo_image_width</item>
        <item name="android:layout_height">@dimen/logo_image_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/imageMargin</item>
        <item name="android:layout_marginTop">@dimen/imageMargin</item>
        <item name="android:background">@drawable/logo</item>
        <item name="android:contentDescription">@string/logo</item>
    </style>

</resources>
